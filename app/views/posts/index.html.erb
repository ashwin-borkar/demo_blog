<p id="notice"><%= notice %></p>

<% content_for :page_title,  "Index" %>
<div class="container">
  <%= link_to "Create New Post", new_post_path, class:"navbar-item" , class: "btn btn-outline-success" %>

  <table id="demo" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
       <th>Title</th>
      <th>Description</th>
      <th>Comment count</th>
      <th> Action</th>
    </thead>
    <tbody>
     <% @posts.each do |post| %>
        <tr> 
          <td><%= link_to post.title, post  %> </td>
          <td><%= post.description %></td>
          <td><%= post.comments.count %> comments</td>
          <td><%= link_to 'Show', post_path(post),class:'btn btn-mini btn-primary' %>
        <%= link_to 'Edit', edit_post_path(post),class:'btn btn-mini btn-success' %>
        <%= link_to 'Destroy', post_path(post),class:'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
     
    </tbody>
  </table>
</div>



<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">


 <script type="text/javascript">
  $(document).ready(function() {
    $('#demo').DataTable();
  });
</script>